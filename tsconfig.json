{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"sourceMap": true,
		"rootDir": "src",
		"paths": {
			"@src/*": [
				"./src/*"
			],
			"@styles/*": [
				"./src/pages/styles/*"
			]
		},
		"allowJs": true,
		"noEmit": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react"
	},
	"include": [
		"src"
	]
}